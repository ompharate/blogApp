<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>add new blog page</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="flex justify-center mt-5">
      <form
        class="flex flex-col w-[40%] gap-4"
        action="/blog/add-new"
        method="post"
        enctype="multipart/form-data"
      >
        <input
          class="p-4 border border-gray-500"
          type="text"
          name="title"
          placeholder="Blog title"
        />
        <textarea
          placeholder="enter blog body"
          class="border border-gray-500 p-4 m-0"
          name="body"
        ></textarea>
        <input
          class="p-4 border border-gray-500"
          type="file"
          name="coverImageURL"
        />
        <Button
          class="bg-gray-500 text-white font-bold border border-gray-500 rounded-lg p-4"
          >Add new blog</Button
        >
      </form>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
